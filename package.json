{
  "name": "wallet-system",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:client": "cd packages/db && npx prisma generate && cd ../..",
    "start-user-app": "cd ./apps/user-side && npm run start"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@types/express": "^5.0.6",
    "esbuild": "^0.27.2",
    "express": "^5.2.1"
  }
}
